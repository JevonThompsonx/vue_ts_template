{
  "$schema": "https://raw.githubusercontent.com/biomejs/biome/main/schema.json",
  "files": {
    "include": ["src/**/*.{js,ts,jsx,tsx,vue}"]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "rules": {
      "recommended": true,
      "noUnusedVariables": "warn",
      "noExplicitAny": "warn",
      "vueNoUnusedComponents": "error"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}

